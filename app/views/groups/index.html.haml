.wrapper
  = render 'shared/side_bar'
  .chat
    .header
      .left-header
        .left-header__title

      .right-header
        .right-header__button
          Edit
    .messages
      .message
        .upper-message

    .form
      %form
        %input.form__message
        .form__mask
          %label.form__mask__image
            = icon('fa','image',class: 'icon')
            %input.hidden{type: 'file'}
        %input.form__submit{type: 'submit', value: 'Send'}